<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>O-MATCHA</display-name>
  <welcome-file-list>
    <welcome-file>page/index.jsp</welcome-file>
  </welcome-file-list>
  
  
  
  <servlet>
  	<servlet-name>shoppingcart</servlet-name>
  	<servlet-class>com.omatcha.servlet.ShoppingServlet</servlet-class>
  </servlet>
 <servlet-mapping>
	<servlet-name>shoppingcart</servlet-name> 
	<url-pattern>/shoppingAjax</url-pattern>
 </servlet-mapping>
  <!-- product -->
  <servlet>
  	<servlet-name>product</servlet-name>
  	<servlet-class>com.omatcha.servlet.ProductServlet</servlet-class>
  </servlet>
 <servlet-mapping>
	<servlet-name>product</servlet-name> 
	<url-pattern>/product.do</url-pattern>
 </servlet-mapping>
  <!-- 配置过滤器 -->
	<filter>
		<filter-name>CharsetFilter</filter-name>
		<filter-class>com.omatcha.filter.CharsetFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>CharsetFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
  <!-- 加载静态资源 -->
  	<servlet-mapping>
  		<servlet-name>defuault</servlet-name>
  		<url-pattern>*.js</url-pattern>
  	</servlet-mapping>
  	<servlet-mapping>
  		<servlet-name>defuault</servlet-name>
  		<url-pattern>*.css</url-pattern>
  	</servlet-mapping>
  	<servlet-mapping>
  		<servlet-name>defuault</servlet-name>
  		<url-pattern>*.jpg</url-pattern>
  	</servlet-mapping>
  	<servlet-mapping>
  		<servlet-name>defuault</servlet-name>
  		<url-pattern>*.png</url-pattern>
  	</servlet-mapping>
</web-app>